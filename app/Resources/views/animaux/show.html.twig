{% extends 'front_office/base.html.twig' %}

{% block body %}
    <h1>Animaux</h1>

    <table>
        <tbody>
            <tr>
                <th>Idanimaux</th>
                <td>{{ animaux.idanimaux }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ animaux.type }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ animaux.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animaux.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('animaux_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('animaux_edit', { 'idanimaux': animaux.idanimaux }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
